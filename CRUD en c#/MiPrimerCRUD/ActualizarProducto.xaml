        <Label Content="Cantidad:" HorizontalAlignment="Left" Margin="169,346,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="TxtActualizaCantidadProducto" HorizontalAlignment="Left" Margin="278,357,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="136" Height="28"/>
        <ComboBox x:Name="cboProveedores" HorizontalAlignment="Left" Margin="294,303,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
